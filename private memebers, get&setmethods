#include <iostream>
using namespace std;

class Student{
    
    private:
    int age= 21;
    string id= "cs20283";
    
    
    public:
    string name= "bhavesh";
    int roll_no= 79;
    
    int getAge(){
        return age;
    }
    string getId(){
        return id;
    }
    void setAge(int b){
        age= b;
    }
    void setId(string a){
        id= a;
    }
};

int main()
{
    Student st;
    cout<<"student name is: "<<st.name<<endl;
    // cout<<"student age is: "<<st.age<<endl;  //this will give error because age is private in our code
    cout<<"student roll_no is: "<<st.roll_no<<endl;
    
    
    //for accessing private members we have to use getter and setter method
    cout<<"after getter method"<<endl;
    cout<<"student id is: "<<st.getId()<<endl;
    cout<<"student age is: "<<st.getAge()<<endl;
    
    cout<<"after setter method"<<endl;
    st.setId("cse20");
    st.setAge(20);
    cout<<"student id is: "<<st.getAge()<<endl;
    cout<<"student age is: "<<st.getId()<<endl;

    return 0;
}
