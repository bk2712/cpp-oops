// copy constructor


class A{
    public:
    
    string name= "Goldy";
    int age= 20;
    A(string name,int age){
        this->name= name;
        this->age= age;    //uper wle name or age ko permamently change kr dia h
    }
    
    A(A &temp){
        this->name= temp.name;
        this->age= temp.age;
    }
    
    void print(){
        cout<<"Hi my name is "<<name<<" "<<"and my age is "<<age<<endl; 
    }
};
int main()
{
    A obj("Bhavesh", 21);  //phla obj jo ki parameterized constructor ka part h
    obj.print();
    
    cout<<endl<<"hi new one!"<<endl;
    
    A obj2(obj);          // dusra obj jo ki copy constructor ka part h or usme hmne phle obj(obj) ko pass kr dia h
    obj2.print();
    
    return 0;
}
